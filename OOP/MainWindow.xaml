        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="49" Margin="247,58,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="38" Margin="247,148,0,0" VerticalAlignment="Top" Width="160" Click="btnLogin_Click" FontSize="24"/>
