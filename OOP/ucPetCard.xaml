<UserControl x:Class="OOP.ucPetCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Label x:Name="lblPetName" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="28" Width="130"/>
        <Label x:Name="lblBreed" Content="Label" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Height="29" Width="130"/>
        <Label x:Name="lblOwner" Content="Label" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Height="28" Width="130"/>
        <Button x:Name="btnOpen" Content="Open" HorizontalAlignment="Left" Margin="40,114,0,0" VerticalAlignment="Top" Width="75" Click="btnOpen_Click"/>

    </Grid>
</UserControl>
